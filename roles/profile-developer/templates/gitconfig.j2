[user]
	name = {{ git_user_name }}
	email = {{ git_user_email }}
	signingkey = {{ git_signing_key }}
[github]
	user = {{ github_user_name }}
[pager]
  diff =
[alias]
  graph = log --graph --pretty='format:%C(yellow)%h%Cblue%d%Creset %s %C(white) %an, %ar%Creset'
  rm-merged = !git branch --merged | grep -v "\\*" | grep -v master | grep -v dev | xargs -n 1 git branch -d
[help]
	autocorrect = 1
[color]
	ui = true
[push]
	default = simple
[diff]
	tool = vimdiff
[core]
	excludefiles = {{ home_dir }}/.gitignore
	excludesfile = {{ home_dir }}/.gitignore
